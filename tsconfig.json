{
  "compilerOptions": {
    "outDir": "./build",
    "target": "es2016",
    "module": "commonjs",
    "lib": ["es2016"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "expo-pdf-toolkit": ["./src"]
    }
  },
  "include": ["./src", "*.d.ts"],
  "exclude": [
    "**/__mocks__/*",
    "**/__tests__/*",
    "**/__rsc_tests__/*",
    "node_modules"
  ]
}
